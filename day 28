#include<stdio.h>
void main()
{
int i,j,n;
printf("enter the value of n:");
scanf("%d",&n);
for(i=1;i<=n-1;i++)
{
for(j=1;j<=n-i+1;j++)
{
printf("*");
}
for(j=1;j=2*i-3;j++)
{
printf(" ");
}
for(j=1;j<=n-1;j++)
{
printf("*");
}
}
else
{
for(j=1;j<=n-i+1;j++)
{
printf("*");
}}
printf("\n");
}
getch();
}
